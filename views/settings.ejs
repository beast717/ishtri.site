<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title data-i18n="settings.title">Settings | Ishtri</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="icon" href="/ishtri1.png" sizes="16x16 32x32" type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="Manage your account settings and notification preferences on Ishtri.">
    <meta name="robots" content="noindex, nofollow">
</head>

<body data-page="settings">
    <%- include('partials/navbar') %>

    <div class="settings-container">
        <div class="settings-header">
            <h1><i class="fas fa-cog"></i> <span data-i18n="settings.title">Settings</span></h1>
            <p data-i18n="settings.subtitle">Manage your account preferences and notifications</p>
        </div>

        <div class="settings-content">
            <!-- Email Notifications Section -->
            <div class="settings-section">
                <div class="section-header">
                    <h2><i class="fas fa-envelope"></i> <span data-i18n="settings.email_notifications">Email Notifications</span></h2>
                    <p data-i18n="settings.email_notifications_desc">Control when you receive email notifications</p>
                </div>
                
                <div class="setting-item">
                    <div class="setting-info">
                        <h3 data-i18n="settings.saved_search_matches">Saved Search Matches</h3>
                        <p data-i18n="settings.saved_search_desc">Get notified by email when new products match your saved searches</p>
                    </div>
                    <div class="setting-control">
                        <label class="toggle-switch">
                            <input type="checkbox" id="emailNotificationToggle">
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Account Information Section -->
            <div class="settings-section">
                <div class="section-header">
                    <h2><i class="fas fa-user"></i> <span data-i18n="settings.account_information">Account Information</span></h2>
                    <p data-i18n="settings.account_info_desc">View your account details</p>
                </div>
                
                <div class="setting-item">
                    <div class="setting-info">
                        <h3 data-i18n="settings.email">Email</h3>
                        <p id="userEmail">Loading...</p>
                    </div>
                </div>
                
                <div class="setting-item">
                    <div class="setting-info">
                        <h3 data-i18n="settings.username">Username</h3>
                        <p id="userName">Loading...</p>
                    </div>
                </div>
            </div>

            <!-- Support Section -->
            <div class="settings-section">
                <div class="section-header">
                    <h2><i class="fas fa-question-circle"></i> <span data-i18n="settings.support">Support</span></h2>
                    <p>Get help and contact information</p>
                </div>
                
                <div class="setting-item">
                    <div class="setting-info">
                        <h3>Help Center</h3>
                        <p>Find answers to common questions</p>
                    </div>
                    <div class="setting-control">
                        <a href="/help" class="btn btn-outline">
                            <i class="fas fa-external-link-alt"></i> Visit Help Center
                        </a>
                    </div>
                </div>
                
                <div class="setting-item">
                    <div class="setting-info">
                        <h3 data-i18n="settings.contact_support">Contact Support</h3>
                        <p data-i18n="settings.contact_support_desc">Reach out to our support team</p>
                    </div>
                    <div class="setting-control">
                        <a href="mailto:support@ishtri.site" class="btn btn-outline">
                            <i class="fas fa-envelope"></i> <span data-i18n="settings.contact_us">Contact Us</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Loading Overlay -->
        <div id="settingsLoading" class="loading-overlay" style="display: none;">
            <div class="loading-spinner">
                <i class="fas fa-spinner fa-spin"></i>
                <p data-i18n="settings.updating_settings">Updating settings...</p>
            </div>
        </div>
    </div>

    <!-- Load the modular JavaScript application -->
    <script type="module" src="/js/app.js"></script>
</body>
</html>
