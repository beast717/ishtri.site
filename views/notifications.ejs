<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title data-i18n="navbar.notifications">My Notifications</title>
    
    <!-- Layout Shift Prevention Optimizations -->
    <%- include('partials/optimized-head') %>
    
    <link rel="stylesheet" href="/css/main.min.css">
    <link rel="icon" href="/ishtri1.png" sizes="16x16 32x32" type="image/png">
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin="anonymous">
    <noscript><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" crossorigin="anonymous"></noscript>
</head>
<body data-page="notifications">
    <%- include('partials/navbar') %>

    <div class="notifications-container">
        <div class="notifications-header">
            <h1 data-i18n="navbar.notifications">My Notifications</h1>
            <button id="markAllReadBtn" class="btn btn-primary" disabled data-i18n="notifications.mark_all_read">Mark All as Read</button>
        </div>

        <ul class="notification-list" id="notificationList">
            <!-- Skeleton loading while notifications load -->
            <div class="skeleton-notification skeleton-container">
                <div class="skeleton skeleton-icon"></div>
                <div class="skeleton-content">
                    <div class="skeleton skeleton-text large" style="width: 80%;"></div>
                    <div class="skeleton skeleton-text" style="width: 95%;"></div>
                    <div class="skeleton skeleton-timestamp"></div>
                </div>
            </div>
            <div class="skeleton-notification skeleton-container">
                <div class="skeleton skeleton-icon"></div>
                <div class="skeleton-content">
                    <div class="skeleton skeleton-text large" style="width: 70%;"></div>
                    <div class="skeleton skeleton-text" style="width: 90%;"></div>
                    <div class="skeleton skeleton-timestamp"></div>
                </div>
            </div>
        </ul>
    </div>

    <!-- Layout Shift Prevention Scripts -->
    <%- include('partials/optimized-scripts') %>

    <!-- Load Socket.IO and modular app.js -->
    <script type="module" src="/js/app.js"></script>
</body>
</html>