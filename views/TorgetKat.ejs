    }
}

@media (max-width: 480px) {
    /* Ultra-Mobile Adjustments */
    .product img {
        height: 150px;
    }

    .productsContainer {
        grid-template-columns: 1fr;
    }

    .favorite-icon {
        font-size: 1rem;
    }

    .side-panel h3 {
        font-size: 16px;
        margin-bottom: 10px;
    }
}

        
