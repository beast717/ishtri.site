            fetch(`/api/cities?country=${selectedCountry}`)
                .then(response => response.json())
                .then(cities => {
                    // Clear existing cities
                    cityList.innerHTML = '';

                    // Add cities to the city list
                    cities.forEach(city => {
                        const li = document.createElement('li');
